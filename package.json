{
  "name": "takumiokayasu.github.io",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "bunx --bun vite",
    "build": "bun run type-check && bunx --bun vite build",
    "lint": "bunx biome check --write ./src",
    "preview": "bunx --bun vite preview",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:unit": "bun test src/**/*.test.{ts,tsx}",
    "test:vitest": "bunx --bun vitest",
    "test:vitest:ui": "bunx --bun vitest --ui",
    "test:vitest:run": "bunx --bun vitest run",
    "cy:open": "bunx cypress open",
    "cy:run": "bunx cypress run",
    "test:e2e": "bunx start-server-and-test 'bun run dev' http://localhost:5173 'bun run cy:run'",
    "test:e2e:open": "bunx start-server-and-test 'bun run dev' http://localhost:5173 'bun run cy:open'",
    "test:all": "bun run test:unit && bun run test:e2e",
    "type-check": "tsc --noEmit -p tsconfig.app.json",
    "type-check:test": "tsc --noEmit -p tsconfig.test.json",
    "clean": "rm -rf dist coverage .turbo",
    "clean:deps": "rm -rf node_modules bun.lockb",
    "reinstall": "bun run clean:deps && bun install"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.3",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@happy-dom/global-registrator": "^18.0.1",
    "@swc/core": "^1.12.11",
    "@tailwindcss/postcss": "^4.1.11",
    "@tailwindcss/vite": "^4.1.11",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bun": "^1.2.19",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.0.15",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react-swc": "^3.10.2",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "cypress": "^14.5.2",
    "globals": "^16.3.0",
    "happy-dom": "^18.0.1",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "start-server-and-test": "^2.0.12",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4",
    "vitest": "^3.2.4"
  }
}
